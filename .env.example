# ==========================================
# Codebase Genius Environment Configuration
# ==========================================
# Copy this file to .env and configure the values
# This is the main environment template for all deployment environments

# ==========================================
# CORE APPLICATION SETTINGS
# ==========================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Application URLs and Ports
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501
FRONTEND_URL=http://localhost:8501
BACKEND_URL=http://localhost:8000

# Application Security
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*.vercel.app,*.netlify.app

# ==========================================
# PERFORMANCE & SCALING
# ==========================================

# Concurrent Processing
MAX_CONCURRENT_WORKFLOWS=5
WORKER_PROCESSES=1
WORKER_THREADS=4

# Timeouts and Limits
DEFAULT_TIMEOUT=300
REQUEST_TIMEOUT=30
MAX_REPO_SIZE_MB=500
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REPO=10000

# Memory Management
MAX_MEMORY_USAGE_MB=2048
CACHE_SIZE_MB=512
WORKSPACE_CLEANUP_INTERVAL_HOURS=24

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/codebase_genius
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Database Migrations
AUTO_MIGRATE=true
MIGRATION_TIMEOUT=60

# ==========================================
# EXTERNAL API CONFIGURATION
# ==========================================

# GitHub API
GITHUB_TOKEN=your-github-token
GITHUB_API_RATE_LIMIT=60
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# GitLab API
GITLAB_TOKEN=your-gitlab-token
GITLAB_API_RATE_LIMIT=60
GITLAB_API_BASE_URL=https://gitlab.com/api/v4

# Bitbucket API
BITBUCKET_USERNAME=your-bitbucket-username
BITBUCKET_APP_PASSWORD=your-bitbucket-app-password
BITBUCKET_API_RATE_LIMIT=60

# Gitee API
GITEE_TOKEN=your-gitee-token
GITEE_API_RATE_LIMIT=60

# AI/LLM API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
COHERE_API_KEY=your-cohere-api-key

# ==========================================
# FILE STORAGE CONFIGURATION
# ==========================================

# Storage Type (local, s3, gcs, azure)
STORAGE_TYPE=local
STORAGE_PATH=/app/tmp/workspace
CACHE_DIR=/app/tmp/cache
TEMP_DIR=/app/tmp/temp

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=codebase-genius-storage
S3_PREFIX=docs/

# Google Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account.json
GCS_BUCKET_NAME=codebase-genius-storage

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=codebase-genius

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_LEVEL=INFO

# Tracing
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_SAMPLE_RATE=0.1

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ==========================================
# EMAIL & NOTIFICATIONS
# ==========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@codebasegenius.ai

# Slack Integration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#deployments
SLACK_USERNAME=CodebaseGenius

# Discord Integration
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security Headers
ENABLE_SECURITY_HEADERS=true
FRAME_OPTIONS=DENY
CONTENT_TYPE_OPTIONS=nosniff

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# ==========================================
# DEPLOYMENT PLATFORM SETTINGS
# ==========================================

# Docker Settings
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=ghcr.io
DOCKER_REGISTRY_USERNAME=your-registry-username

# Netlify Settings
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_BUILD_DIR=dist

# Vercel Settings
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# Heroku Settings
HEROKU_API_KEY=your-heroku-api-key
HEROKU_APP_NAME=codebase-genius

# Railway Settings
RAILWAY_TOKEN=your-railway-token
RAILWAY_PROJECT_ID=your-project-id

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================

# Development Mode
DEV_MODE=true
HOT_RELOAD=true
AUTO_RELOAD=true

# Debug Settings
DEBUG_SQL=false
DEBUG_REQUESTS=false
DEBUG_RESPONSES=false
DEBUG_AGENTS=false

# Test Settings
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/codebase_genius_test
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_ADDOPTS=--verbose --tb=short

# Code Coverage
COVERAGE_ENABLED=true
COVERAGE_OUTPUT_DIR=htmlcov
COVERAGE_MIN_PERCENTAGE=80

# ==========================================
# FEATURE FLAGS
# ==========================================

# Feature Toggles
FEATURE_AI_GENERATION=true
FEATURE_MULTI_FORMAT_OUTPUT=true
FEATURE_REALTIME_PROGRESS=true
FEATURE_USER_ACCOUNTS=false
FEATURE_COLLABORATION=false
FEATURE_API_V2=true
FEATURE_BATCH_PROCESSING=true
FEATURE_TEMPLATE_ENGINE=true
FEATURE_CUSTOM_STYLES=true
FEATURE_EXPORT_OPTIONS=true

# Beta Features
BETA_ADVANCED_ANALYSIS=false
BETA_CODE_GRAPH=true
BETA_DEPENDENCY_TRACKING=true
BETA_PERFORMANCE_INSIGHTS=false

# ==========================================
# ANALYTICS & TRACKING
# ==========================================

# Usage Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==========================================
# CACHING CONFIGURATION
# ==========================================

# Cache Settings
CACHE_DEFAULT_TIMEOUT=3600
CACHE_THRESHOLD=500
CACHE_TYPE=redis

# Repository Caching
REPO_CACHE_TTL=7200
REPO_CACHE_SIZE=100
REPO_CACHE_COMPRESS=true

# API Response Caching
API_CACHE_TTL=300
API_CACHE_SIZE=1000
API_CACHE_COMPRESS=true

# ==========================================
# QUEUE & BACKGROUND TASKS
# ==========================================

# Task Queue
QUEUE_TYPE=redis
QUEUE_MAX_WORKERS=4
QUEUE_MAX_TASKS=1000
QUEUE_TASK_TIMEOUT=1800

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=2

# ==========================================
# INTERNATIONALIZATION
# ==========================================

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja,ko
TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# ==========================================
# CONTENT DELIVERY NETWORK
# ==========================================

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.codebasegenius.ai
CDN_API_ENDPOINT=https://api.codebasegenius.ai

# Static Files
STATIC_FILES_URL=/static
STATIC_FILES_MAX_AGE=31536000
STATIC_FILES_COMPRESS=true

# ==========================================
# INTEGRATION SETTINGS
# ==========================================

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# API Integrations
ZAPIER_WEBHOOK_URL=your-zapier-webhook
IFTTT_WEBHOOK_URL=your-ifttt-webhook
MAKE_WEBHOOK_URL=your-make-webhook

# ==========================================
# LICENSE & COMPLIANCE
# ==========================================

# License Configuration
LICENSE_TYPE=mit
LICENSE_KEY=your-license-key
LICENSE_VALIDATION_URL=https://license.codebasegenius.ai/validate

# Data Protection
DATA_RETENTION_DAYS=30
GDPR_COMPLIANCE=true
DATA_ENCRYPTION=true
AUDIT_LOG_ENABLED=true

# ==========================================
# BACKUP & RECOVERY
# ==========================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
BACKUP_COMPRESSION=true

# Recovery Settings
RECOVERY_POINT_OBJECTIVE_HOURS=24
RECOVERY_TIME_OBJECTIVE_MINUTES=60