{"agent_info": {"name": "DocGenie Agent", "version": "1.0.0", "description": "Automatic code documentation generator that creates comprehensive documentation from Code Context Graph (CCG) data", "phase": 5, "author": "Cavin Otieno"}, "documentation_settings": {"template_dir": "./templates", "output_dir": "./outputs", "default_language": "en", "encoding": "utf-8"}, "diagram_settings": {"enabled": true, "format": "png", "dpi": 300, "style": "modern", "include_confidence_threshold": 0.7, "max_nodes_per_diagram": 100, "color_scheme": {"class": "lightblue", "function": "lightgreen", "method": "lightyellow", "module": "lightcoral", "variable": "lightgray"}, "edge_styles": {"calls": {"color": "blue", "label": "calls"}, "imports": {"color": "green", "label": "imports"}, "inherits": {"color": "red", "label": "inherits"}, "contains": {"color": "orange", "label": "contains"}, "uses": {"color": "purple", "label": "uses"}}}, "template_settings": {"citation_style": "github", "doc_structure": "comprehensive", "include_source_code": true, "include_complexity_metrics": true, "include_dependency_analysis": true, "max_content_length": 10000}, "quality_settings": {"min_sections": 3, "required_sections": ["overview", "api_reference", "architecture"], "min_quality_score": 0.6, "validate_citations": true, "check_completeness": true}, "output_formats": {"markdown": {"enabled": true, "extensions": [".md"], "include_toc": true, "include_metadata": true}, "html": {"enabled": true, "extensions": [".html"], "include_css": true, "responsive": true}, "json": {"enabled": false, "extensions": [".json"], "pretty_print": true}}, "api_endpoints": {"generate_documentation": {"path": "/generate", "methods": ["POST"], "description": "Generate documentation from CCG data", "required_fields": ["ccg_data", "repository_info"], "optional_fields": ["config_override", "output_format"]}, "get_templates": {"path": "/templates", "methods": ["GET"], "description": "Get available documentation templates"}, "get_qual