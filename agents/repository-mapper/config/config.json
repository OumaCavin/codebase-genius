{
  "repository_mapper": {
    "max_file_size": 10485760,
    "max_file_preview": 5000,
    "timeout_seconds": 300,
    "temp_dir": "/tmp/codebase_genius",
    "allowed_domains": ["github.com", "gitlab.com"],
    "ignore_patterns": [
      ".git",
      ".svn", 
      ".hg",
      "node_modules",
      "__pycache__",
      ".pytest_cache",
      "target",
      "build",
      "dist",
      "out",
      ".DS_Store",
      "Thumbs.db",
      "*.pyc",
      "*.pyo",
      "*.pyd",
      ".env",
      ".env.local",
      "secrets.txt",
      ".idea",
      ".vscode",
      "*.log",
      "logs",
      "temp",
      "tmp"
    ],
    "language_extensions": {
      ".py": "Python",
      ".js": "JavaScript", 
      ".ts": "TypeScript",
      ".java": "Java",
      ".cpp": "C++",
      ".c": "C",
      ".h": "C/C++ Header",
      ".cc": "C++",
      ".cs": "C#",
      ".php": "PHP",
      ".rb": "Ruby",
      ".go": "Go",
      ".rs": "Rust",
      ".swift": "Swift",
      ".kt": "Kotlin",
      ".scala": "Scala",
      ".sh": "Shell",
      ".bat": "Batch",
      ".ps1": "PowerShell",
      ".html": "HTML",
      ".css": "CSS",
      ".scss": "SCSS",
      ".less": "LESS",
      ".vue": "Vue.js",
      ".jsx": "React JSX",
      ".tsx": "React TSX",
      ".md": "Markdown",
      ".txt": "Plain Text",
      ".yml": "YAML",
      ".yaml": "YAML",
      ".json": "JSON",
      ".xml": "XML",
      ".toml": "TOML",
      ".ini": "INI",
      ".cfg": "Configuration",
      ".conf": "Configuration",
      ".sql": "SQL",
      ".db": "Database",
      ".sqlite": "SQLite",
      ".dockerfile": "Docker",
      ".docker": "Docker",
      ".makefile": "Makefile",
      ".mk": "Makefile",
      ".gradle": "Gradle",
      ".pom": "Maven",
      ".sln": "Visual Studio Solution",
      ".vcxproj": "Visual Studio Project"
    }
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8080,
    "max_requests_per_minute": 10,
    "request_timeout": 30,
    "enable_cors": true,
    "cors_origins": ["http://localhost:3000", "http://localhost:8501"],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    }
  },
  "security": {
    "allowed_domains": ["github.com", "gitlab.com", "bitbucket.org"],
    "max_repository_size_mb": 100,
    "max_file_count": 10000,
    "sanitize_filenames": true,
    "validate_urls": true,
    "block_private_repos": false
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/repo_mapper.log",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "enable_console": true,
    "console_level": "INFO"
  },
  "performance": {
    "max_concurrent_operations": 5,
    "memory_limit_mb": 512,
    "disk_cache_enabled": true,
    "cache_ttl_seconds": 3600,
    "gc_threshold": 700,
    "worker_threads": 4
  },
  "features": {
    "file_preview_enabled": true,
    "readme_summarization": true,
    "language_detection": true,
    "file_statistics": true,
    "repository_stats": true,
    "cleanup_enabled": true,
    "error_recovery": true,
    "progress_tracking": true
  },
  "external_services": {
    "github_api": {
      "enabled": false,
      "token": null,
      "rate_limit": 5000,
      "timeout_seconds": 10
    },
    "openai_api": {
      "enabled": false,
      "token": null,
      "model": "gpt-3.5-turbo",
      "max_tokens": 1000,
      "timeout_seconds": 30
    }
  },
  "testing": {
    "test_repository": "https://github.com/microsoft/vscode",
    "test_timeout": 60,
    "enable_integration_tests": true,
    "test_file_size_limit": 1048576,
    "mock_external_calls": false
  }
}