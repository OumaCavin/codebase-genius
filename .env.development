# ==========================================
# Codebase Genius - Development Environment
# ==========================================
# Development-specific configuration with debug features

# ==========================================
# CORE APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Application URLs and Ports
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501
FRONTEND_URL=http://localhost:8501
BACKEND_URL=http://localhost:8000

# ==========================================
# DEVELOPMENT FEATURES
# ==========================================
DEV_MODE=true
HOT_RELOAD=true
AUTO_RELOAD=true
DEBUG_SQL=true
DEBUG_REQUESTS=true
DEBUG_RESPONSES=true
DEBUG_AGENTS=true

# ==========================================
# PERFORMANCE (Development Optimized)
# ==========================================
MAX_CONCURRENT_WORKFLOWS=3
WORKER_PROCESSES=1
WORKER_THREADS=2
DEFAULT_TIMEOUT=180
REQUEST_TIMEOUT=30
MAX_REPO_SIZE_MB=100
MAX_FILE_SIZE_MB=5

# ==========================================
# DATABASE (Development)
# ==========================================
DATABASE_URL=postgresql://codebase_genius:codebase_genius_dev@localhost:5432/codebase_genius_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ==========================================
# EXTERNAL API KEYS
# ==========================================
GITHUB_TOKEN=your-github-token-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ==========================================
# SECURITY (Development)
# ==========================================
SECRET_KEY=development-secret-key-not-for-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8080,http://127.0.0.1:8501
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==========================================
# STORAGE (Local Development)
# ==========================================
STORAGE_TYPE=local
STORAGE_PATH=/app/tmp/workspace
CACHE_DIR=/app/tmp/cache
TEMP_DIR=/app/tmp/temp

# ==========================================
# TESTING
# ==========================================
TEST_DATABASE_URL=postgresql://codebase_genius:test_pass@localhost:5432/codebase_genius_test
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_ADDOPTS=--verbose --tb=short --cov=src --cov-report=html --cov-report=term

COVERAGE_ENABLED=true
COVERAGE_MIN_PERCENTAGE=70

# ==========================================
# FEATURE FLAGS (Development)
# ==========================================
FEATURE_AI_GENERATION=true
FEATURE_MULTI_FORMAT_OUTPUT=true
FEATURE_REALTIME_PROGRESS=true
FEATURE_USER_ACCOUNTS=false
FEATURE_API_V2=true
FEATURE_BATCH_PROCESSING=false
FEATURE_TEMPLATE_ENGINE=true
FEATURE_CUSTOM_STYLES=false
FEATURE_EXPORT_OPTIONS=true

BETA_ADVANCED_ANALYSIS=true
BETA_CODE_GRAPH=true
BETA_DEPENDENCY_TRACKING=true
BETA_PERFORMANCE_INSIGHTS=true

# ==========================================
# MONITORING (Development)
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=8001
LOG_FORMAT=text
LOG_FILE=logs/dev.log
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=3

# ==========================================
# CACHING (Development)
# ==========================================
CACHE_TYPE=memory
CACHE_DEFAULT_TIMEOUT=1800
REPO_CACHE_TTL=3600
API_CACHE_TTL=60

# ==========================================
# QUEUE (Development)
# ==========================================
QUEUE_TYPE=memory
QUEUE_MAX_WORKERS=2
QUEUE_MAX_TASKS=100

# ==========================================
# INTERNATIONALIZATION
# ==========================================
DEFAULT_LANGUAGE=en
TIMEZONE=America/New_York
DATE_FORMAT=MM/DD/YYYY
TIME_FORMAT=hh:mm:ss a